{
    "name": "portavice/public-holidays-calculator",
    "description": "A calculator for public holidays written in PHP",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "homepage": "https://portavice.de",
    "autoload": {
        "psr-4": {
            "Portavice\\PublicHolidays\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Patrick Robrecht",
            "email": "patrick.robrecht@portavice.de",
            "role": "Developer"
        }
    ],
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "require": {
        "php": "^8.1",
        "ext-calendar": "*",
        "nesbot/carbon": "^2.66.0|^3.8.6"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.2",
        "phpcompatibility/php-compatibility": "^9.3.5",
        "phpunit/phpunit": "^10.2.2",
        "squizlabs/php_codesniffer": "^3.7.2"
    },
    "scripts": {
        "cs": [
            "phpcs"
        ],
        "csfix": [
            "phpcbf"
        ],
        "test": [
            "phpunit"
        ]
    }
}
